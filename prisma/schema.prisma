generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Text {
  id      Int     @id @default(autoincrement())
  title   String?
  autor   String?
  content String

  @@map("texts")
}

model TextSanitized {
  id      Int     @id @default(autoincrement())
  title   String?
  autor   String?
  content String

  @@map("texts_sanitized")
}
